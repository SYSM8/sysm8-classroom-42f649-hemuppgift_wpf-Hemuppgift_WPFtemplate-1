<Window x:Class="Hemuppgift_WPFtemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
            <Button x:Name="GridBtn" Content="Grid" Grid.Row="0" Grid.Column="0" Click="GridBtn_Click"/>
            <Button x:Name="StackBtn"  Content="Stackpanel" Grid.Row="0" Grid.Column="1" Click="StackBtn_Click" />
            <Button x:Name="WrapBtn"  Content="Wrappanel" Grid.Row="1" Grid.Column="0" Click="WrapBtn_Click"/>
            <Button x:Name="DockBtn" Content="Dockpanel" Grid.Row="1" Grid.Column="1" Click="DockBtn_Click" />

        
    </Grid>
</Window>
